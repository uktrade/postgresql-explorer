{
  "name": "postgresql-explorer",
  "displayName": "PostgreSQL Explorer",
  "description": "A client to query a PostgreSQL database from within Visual Studio Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.93.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "postgres",
        "extensions": [
          ".sql",
          ".pgsql",
          ".psql"
        ],
        "aliases": [
          "Postgres"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "postgres",
        "scopeName": "source.pgsql",
        "path": "./syntaxes/pgsql.tmLanguage"
      }
    ],
    "keybindings": [
      {
        "command": "posgresql-explorer.runQuery",
        "key": "f5",
        "when": "editorLangId == postgres"
      }
    ],
    "commands": [
      {
        "command": "posgresql-explorer.newQuery",
        "title": "New Query",
        "icon": {
          "light": "resources/light/new-query.svg",
          "dark": "resources/dark/new-query.svg"
        },
        "category": "PostgreSQL"
      },
      {
        "command": "posgresql-explorer.refresh",
        "title": "Refresh",
        "category": "PostgreSQL",
        "icon": {
          "light": "./resources/light/refresh.svg",
          "dark": "./resources/dark/refresh.svg"
        }
      },
      {
        "command": "posgresql-explorer.selectTop",
        "title": "Select Top...",
        "category": "PostgreSQL",
        "icon": {
          "light": "./resources/light/new-query.svg",
          "dark": "./resources/dark/new-query.svg"
        }
      },
      {
        "command": "posgresql-explorer.runQuery",
        "title": "Run Query",
        "category": "PostgreSQL",
        "icon": {
          "light": "./resources/light/run-file.svg",
          "dark": "./resources/dark/run-file.svg"
        }
      },
      {
        "command": "posgresql-explorer.saveResult",
        "title": "Save Result",
        "category": "PostgreSQL",
        "icon": {
          "light": "./resources/light/save.svg",
          "dark": "./resources/dark/save.svg"
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "posgresql-explorer.saveResult",
          "when": "theiaPostgresResultFocus",
          "group": "navigation"
        },
        {
          "command": "posgresql-explorer.runQuery",
          "when": "editorLangId == postgres",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "posgresql-explorer.refresh",
          "when": "view == postgres",
          "group": "navigation@1"
        },
        {
          "command": "posgresql-explorer.newQuery",
          "when": "view == postgres",
          "group": "navigation@2"
        }
      ],
      "commandPalette": [
        {
          "command": "posgresql-explorer.runQuery",
          "when": "editorLangId != postgres && editorHasSelection && !editorHasMultipleSelections"
        },
        {
          "command": "posgresql-explorer.selectTop",
          "when": "config.posgresql-explorer.never"
        },
        {
          "command": "posgresql-explorer.saveResult",
          "when": "config.posgresql-explorer.never"
        }
      ],
      "editor/context": [
        {
          "command": "posgresql-explorer.runQuery",
          "when": "editorLangId != postgres && editorHasSelection && !editorHasMultipleSelections",
          "group": "navigation"
        },
        {
          "command": "posgresql-explorer.runQuery",
          "when": "editorLangId == postgres",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "posgresql-explorer.selectTop",
          "when": "view == postgres && viewItem == posgresql-explorer.tree.table",
          "group": "inline"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "postgres-explorer",
          "title": "Datasets",
          "icon": "resources/postgres-explorer.svg"
        }
      ],
       "panel": [{
          "id": "postgresql-explorer.results",
          "title": "Query results"
       }]
    },
    "views": {
      "postgres-explorer": [
        {
          "id": "postgres",
          "name": "PostgreSQL"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@types/pg": "^8.11.10",
    "@types/vscode": "^1.93.1",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.11.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "csv-stringify": "^6.5.1",
    "pg": "^8.3.0",
    "pg-cursor": "^2.3.0",
    "vscode-languageclient": "^7.0.0",
    "vscode-languageserver": "^7.0.0",
    "vscode-languageserver-textdocument": "^1.0.1"
  }
}
