{
  "name": "theia-postgres",
  "displayName": "PostgreSQL",
  "description": "PostgreSQL explorer",
  "version": "0.0.1",
  "publisher": "dit",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/uktrade/theia-postgres"
  },
  "keywords": [
    "theia-plugin"
  ],
  "engines": {
    "theiaPlugin": "next"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "files": [
    "src"
  ],
  "theiaPlugin": {
    "backend": "lib/extension.js"   
  },
  "contributes": {
    "languages": [
      {
        "id": "postgres",
        "extensions": [
          ".sql",
          ".pgsql",
          ".psql"
        ],
        "aliases": [
          "Postgres"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "postgres",
        "scopeName": "source.pgsql",
        "path": "./syntaxes/pgsql.tmLanguage"
      }
    ],
    "keybindings": [
      {
        "command": "theia-postgres.runQuery",
        "key": "f5",
        "when": "editorLangId == postgres"
      }
    ],
    "commands": [
      {
        "command": "theia-postgres.newQuery",
        "title": "New Query",
        "icon": {
          "light": "resources/light/new-query.svg",
          "dark": "resources/dark/new-query.svg"
        },
        "category": "PostgreSQL"
      },
      {
        "command": "theia-postgres.refresh",
        "title": "Refresh",
        "category": "PostgreSQL",
        "icon": {
          "light": "./resources/light/refresh.svg",
          "dark": "./resources/dark/refresh.svg"
        }
      },
      {
        "command": "theia-postgres.selectTop",
        "title": "Select Top...",
        "category": "PostgreSQL",
        "icon": {
          "light": "./resources/light/new-query.svg",
          "dark": "./resources/dark/new-query.svg"
        }
      },
      {
        "command": "theia-postgres.runQuery",
        "title": "Run Query",
        "category": "PostgreSQL",
        "icon": {
          "light": "./resources/light/run-file.svg",
          "dark": "./resources/dark/run-file.svg"
        }
      },
      {
        "command": "theia-postgres.saveResult",
        "title": "Save Result",
        "category": "PostgreSQL",
        "icon": {
          "light": "./resources/light/save.svg",
          "dark": "./resources/dark/save.svg"
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "theia-postgres.saveResult",
          "when": "theiaPostgresResultFocus",
          "group": "navigation"
        },
        {
          "command": "theia-postgres.runQuery",
          "when": "editorLangId == postgres",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "theia-postgres.refresh",
          "when": "view == postgres",
          "group": "navigation@1"
        },
        {
          "command": "theia-postgres.newQuery",
          "when": "view == postgres",
          "group": "navigation@2"
        }
      ],
      "commandPalette": [
        {
          "command": "theia-postgres.runQuery",
          "when": "editorLangId != postgres && editorHasSelection && !editorHasMultipleSelections"
        },
        {
          "command": "theia-postgres.selectTop",
          "when": "config.theia-postgres.never"
        },
        {
          "command": "theia-postgres.saveResult",
          "when": "config.theia-postgres.never"
        }
      ],
      "editor/context": [
        {
          "command": "theia-postgres.runQuery",
          "when": "editorLangId != postgres && editorHasSelection && !editorHasMultipleSelections",
          "group": "navigation"
        },
        {
          "command": "theia-postgres.runQuery",
          "when": "editorLangId == postgres",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "theia-postgres.selectTop",
          "when": "view == postgres && viewItem == theia-postgres.tree.table",
          "group": "inline"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "postgres-explorer",
          "title": "Datasets",
          "icon": "resources/postgres-explorer.svg"
        }
      ]
    },
    "views": {
      "postgres-explorer": [
        {
          "id": "postgres",
          "name": "PostgreSQL"
        }
      ]
    }
  },
  "scripts": {
    "prepare": "yarn run clean && yarn run build",
    "clean": "rimraf lib",
    "format-code": "tsfmt -r",
    "watch": "tsc -watch",
    "compile": "tsc",
    "build": "yarn run format-code && yarn run compile && theia-plugin pack"
  },
  "devDependencies": {
    "@types/csv-stringify": "^1.4.2",
    "@types/keytar": "^4.0.1",
    "@types/mocha": "^2.2.42",
    "@types/node": "^14.0.14",
    "@types/pg": "^7.14.4",
    "@theia/plugin": "latest",
    "@theia/plugin-packager": "latest",
    "rimraf": "2.6.2",
    "typescript": "^3.9.6",
    "typescript-formatter": "7.2.2",
    "vscode": "^1.1.30"
  },
  "dependencies": {
    "csv-stringify": "^3.1.1",
    "pg": "^8.3.0",
    "pg-cursor": "^2.3.0",
    "vscode-languageclient": "^4.4.2",
    "vscode-languageserver": "^4.4.2"
  }
}
